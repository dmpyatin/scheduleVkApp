
<div class="modal" id="changeScheduleModal" tabindex="-1" role="dialog" aria-labelledby="changeScheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
                <h4 class="modal-title" id="changeScheduleModalLabel">Редактирование занятия</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" name="form">
                    

                    <div class="form-group">
                        <div class="col-sm-4">
                            <input typeahead="obj as obj.startTime + '-' + obj.endTime for obj in getTimesModal($viewValue)" class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="hh:mm-hh:mm" ng-model="changeModalTime" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-2">
                            <input typeahead="obj as obj.name for obj in getWeekTypesModal($viewValue)" class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="Ч/3" ng-model="changeModalWeekType" />
                        </div>
                        <div class="col-sm-6">
                            <input typeahead="obj as obj.number + ' ' + obj.buildingShortName for obj in getAuditoriumsModal($viewValue)" class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="Ауд." ng-model="changeModalAuditorium" />
                        </div>
                        
                        <!--
                        <div class="col-sm-6">
                            <input typeahead="obj as obj.shortName for obj in getBuildingsModal($viewValue)" class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="Корпус" ng-model="changeModalBuilding" />
                        </div>-->
                    </div>



                    <div class="form-group">
                        <div class="col-sm-6">
                            <input typeahead="obj as obj.name for obj in getTutorialsModal($viewValue)" class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="Название предмета" ng-model="changeModalTutorialName" />
                        </div>
                        <div class="col-sm-2">
                            <input typeahead="obj as obj.name for obj in getTutorialTypesModal($viewValue)" class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="Тип" ng-model="changeModalTutorialTypeName" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            <input class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="Преподаватель" ng-model="changeModalLecturer" typeahead="obj as obj.name for obj in getLecturersModal($viewValue)" />
                        </div>

                    </div>


                    <div class="form-group">
                        <div class="col-sm-4">
                            <input class="form-control" autocomplete="off" autofocus="autofocus" onclick="this.setSelectionRange(0, this.value.length)" type="text" placeholder="Подгруппа" ng-model="changeModalSubGroup" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="text-danger col-sm-10" ng-repeat="message in errorModalMessages" ng-show='errorModalMessages'>
                            <i class="glyphicon glyphicon-exclamation-sign"></i>&nbsp;<b>{{message}}</b>
                        </div>
                    </div>
                </form>

                
               
                <span style="position:absolute; right:20px; bottom:0px; color:gainsboro;">Подпись: {{userName}}</span>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" ng-click="pressChangeButton();">Применить</button>
            </div>
        </div>
    </div>
</div>

